<div id="title-container", class="d-flex align-items-center title">
  <h1 class="mb-4 ml-5">Doctors</h1>
  <%= button_to "Add new doctor", new_doctor_path, method: :get, class: "btn btn-secondary btn-lg mx-5 mb-4" %>
</div>


<%= turbo_frame_tag "table" do %>
  <div><%= paginate @doctors %></div>
  <div id="doctors" class="shadow border-b border-gray-200 bg-light bg-gradient">
    <table class="table table-striped table-hover rounded rounded-3 overflow-hidden">
      <thead class="bg-dark-gray text-white align-middle text-center">
        <tr>
          <th id="doctor-name" scope="col" class="py-3 px-6">
            <span>Doctor name</span>
          </th>
          <th id="doctor-appointments" scope="col" class="py-3 px-6">
              <span>Number of appointments</span>
          </th>
          <th id="doctor-actions" scope="col" class="py-3 px-6">
            <span>Actions</span>
          </th>
        </tr>
      </thead>
      <tbody class="bg-light-gray align-middle text-center">
        <%= render partial: 'index_item', collection: @doctors, as: :doctor %>
      </tbody>
    </table>
  </div>
<% end %>  
